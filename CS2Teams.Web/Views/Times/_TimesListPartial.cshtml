@model IEnumerable<CS2Teams.Application.ViewModels.TimeViewModel>

@if (!Model.Any())
{
    <div class="alert alert-info">Nenhum time encontrado.</div>
}
else
{
    <div class="row">
        @foreach (var time in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    @if (!string.IsNullOrEmpty(time.LogoUrl))
                    {
                        <img src="@time.LogoUrl" class="card-img-top" alt="@time.Nome" style="height: 200px; object-fit: contain; padding: 20px;">
                    }
                    <div class="card-body">
                        <h5 class="card-title">
                            <span class="badge bg-dark">@time.Tag</span> @time.Nome
                        </h5>
                        <p class="card-text">
                            <strong>País:</strong> @time.Pais<br />
                            <strong>Fundação:</strong> @time.DataFundacao.ToString("dd/MM/yyyy")<br />
                            <strong>Ranking:</strong> #@time.Ranking<br />
                            <strong>Jogadores:</strong> @time.Jogadores.Count
                        </p>
                    </div>
                    <div class="card-footer">
                        <a asp-action="Details" asp-route-id="@time.Id" class="btn btn-sm btn-info">Detalhes</a>
                        <a asp-action="Edit" asp-route-id="@time.Id" class="btn btn-sm btn-warning">Editar</a>
                        <a asp-action="Delete" asp-route-id="@time.Id" class="btn btn-sm btn-danger">Excluir</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
