@model IEnumerable<CS2Players.Application.ViewModels.TimeViewModel>

@{
    ViewData["Title"] = "Times de CS2";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col-md-6">
            <h2>Times de CS2</h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Novo Time
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Barra de Busca com AJAX -->
    <div class="row mb-3">
        <div class="col-md-6">
            <div class="input-group">
                <input type="text" id="searchInput" class="form-control" placeholder="Buscar times...">
                <button class="btn btn-outline-secondary" type="button" id="clearSearch">
                    <i class="bi bi-x-circle"></i>
                </button>
            </div>
        </div>
    </div>

    <!-- Lista de Times -->
    <div id="timesListContainer">
        <div class="row">
            @foreach (var time in Model)
            {
                <div class="col-md-4 mb-3">
                    <div class="card h-100">
                        @if (!string.IsNullOrEmpty(time.LogoUrl))
                        {
                            <img src="@time.LogoUrl" class="card-img-top" alt="@time.Nome" style="height: 200px; object-fit: contain;">
                        }
                        <div class="card-body">
                            <h5 class="card-title">@time.Nome</h5>
                            <p class="card-text">
                                <strong>Região:</strong> @time.Regiao<br>
                                <strong>Fundação:</strong> @time.AnoFundacao<br>
                                <strong>Jogadores:</strong> @time.Jogadores.Count
                            </p>
                        </div>
                        <div class="card-footer">
                            <a asp-action="Details" asp-route-id="@time.Id" class="btn btn-sm btn-info">Detalhes</a>
                            <a asp-action="Edit" asp-route-id="@time.Id" class="btn btn-sm btn-warning">Editar</a>
                            <a asp-action="Delete" asp-route-id="@time.Id" class="btn btn-sm btn-danger">Excluir</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            let searchTimeout;
            
            $('#searchInput').on('keyup', function() {
                clearTimeout(searchTimeout);
                const termo = $(this).val();
                
                if (termo.length === 0) {
                    location.reload();
                    return;
                }
                
                searchTimeout = setTimeout(function() {
                    if (termo.length >= 2) {
                        buscarTimes(termo);
                    }
                }, 300);
            });
            
            $('#clearSearch').on('click', function() {
                $('#searchInput').val('');
                location.reload();
            });
            
            function buscarTimes(termo) {
                $.ajax({
                    url: '/Times/Search',
                    type: 'GET',
                    data: { termo: termo },
                    success: function(data) {
                        renderizarTimes(data);
                    },
                    error: function() {
                        alert('Erro ao buscar times');
                    }
                });
            }
            
            function renderizarTimes(times) {
                let html = '<div class="row">';
                
                if (times.length === 0) {
                    html += '<div class="col-12"><p class="text-center">Nenhum time encontrado.</p></div>';
                } else {
                    times.forEach(function(time) {
                        html += `
                            <div class="col-md-4 mb-3">
                                <div class="card h-100">
                                    ${time.logoUrl ? `<img src="${time.logoUrl}" class="card-img-top" alt="${time.nome}" style="height: 200px; object-fit: contain;">` : ''}
                                    <div class="card-body">
                                        <h5 class="card-title">${time.nome}</h5>
                                        <p class="card-text">
                                            <strong>Região:</strong> ${time.regiao}<br>
                                            <strong>Fundação:</strong> ${time.anoFundacao}<br>
                                            <strong>Jogadores:</strong> ${time.jogadores ? time.jogadores.length : 0}
                                        </p>
                                    </div>
                                    <div class="card-footer">
                                        <a href="/Times/Details/${time.id}" class="btn btn-sm btn-info">Detalhes</a>
                                        <a href="/Times/Edit/${time.id}" class="btn btn-sm btn-warning">Editar</a>
                                        <a href="/Times/Delete/${time.id}" class="btn btn-sm btn-danger">Excluir</a>
                                    </div>
                                </div>
                            </div>
                        `;
                    });
                }
                
                html += '</div>';
                $('#timesListContainer').html(html);
            }
        });
    </script>
}