@model CS2Players.Application.ViewModels.TimeViewModel

@{
    ViewData["Title"] = "Detalhes do Time";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-info-circle"></i> Detalhes do Time
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5 class="text-primary">@Model.Nome</h5>
                            <dl class="row">
                                <dt class="col-sm-4">Região:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-info">@Model.Regiao</span>
                                </dd>

                                <dt class="col-sm-4">Ano Fundação:</dt>
                                <dd class="col-sm-8">@Model.AnoFundacao</dd>

                                <dt class="col-sm-4">Data Criação:</dt>
                                <dd class="col-sm-8">@Model.DataCriacao.ToString("dd/MM/yyyy HH:mm")</dd>
                            </dl>

                            @if (!string.IsNullOrEmpty(Model.LogoUrl))
                            {
                                <div class="mt-3">
                                    <label class="form-label"><strong>Logo:</strong></label>
                                    <div>
                                        <img src="@Model.LogoUrl" alt="Logo do @Model.Nome" class="img-thumbnail" style="max-width: 200px;" />
                                    </div>
                                </div>
                            }
                        </div>

                        <div class="col-md-6">
                            <h6 class="text-secondary">
                                <i class="bi bi-people"></i> Jogadores (@Model.Jogadores.Count)
                            </h6>
                            @if (Model.Jogadores.Any())
                            {
                                <div class="list-group">
                                    @foreach (var jogador in Model.Jogadores)
                                    {
                                        <div class="list-group-item">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div>
                                                    <h6 class="mb-1">@jogador.Nickname</h6>
                                                    <small class="text-muted">@jogador.Funcao - @jogador.Nacionalidade</small>
                                                </div>
                                                <span class="badge bg-secondary">@jogador.Idade anos</span>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-info" role="alert">
                                    <small>Nenhum jogador cadastrado ainda.</small>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Voltar
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Editar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>