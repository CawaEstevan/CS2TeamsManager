@model CS2Players.Application.ViewModels.TimeViewModel

@{
    ViewData["Title"] = "Excluir Time";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle"></i> Confirmar Exclusão
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <strong>Atenção!</strong> Tem certeza que deseja excluir este time?
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4">Nome:</dt>
                        <dd class="col-sm-8">@Model.Nome</dd>

                        <dt class="col-sm-4">Região:</dt>
                        <dd class="col-sm-8">@Model.Regiao</dd>

                        <dt class="col-sm-4">Ano de Fundação:</dt>
                        <dd class="col-sm-8">@Model.AnoFundacao</dd>

                        <dt class="col-sm-4">Data de Criação:</dt>
                        <dd class="col-sm-8">@Model.DataCriacao.ToString("dd/MM/yyyy HH:mm")</dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Confirmar Exclusão
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>