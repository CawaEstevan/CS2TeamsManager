@model IEnumerable<CS2Players.Application.ViewModels.TimeViewModel>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Nome</th>
                    <th>Região</th>
                    <th>Ano Fundação</th>
                    <th>Jogadores</th>
                    <th>Data Criação</th>
                    <th style="width: 200px;">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var time in Model)
                {
                    <tr>
                        <td>
                            <strong>@time.Nome</strong>
                        </td>
                        <td>
                            <span class="badge bg-info">@time.Regiao</span>
                        </td>
                        <td>@time.AnoFundacao</td>
                        <td>
                            <span class="badge bg-secondary">@time.Jogadores.Count jogador(es)</span>
                        </td>
                        <td>@time.DataCriacao.ToString("dd/MM/yyyy")</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@time.Id" class="btn btn-sm btn-info" title="Detalhes">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@time.Id" class="btn btn-sm btn-warning" title="Editar">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@time.Id" class="btn btn-sm btn-danger" title="Excluir">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info" role="alert">
        <i class="bi bi-info-circle"></i> Nenhum time encontrado.
    </div>
}