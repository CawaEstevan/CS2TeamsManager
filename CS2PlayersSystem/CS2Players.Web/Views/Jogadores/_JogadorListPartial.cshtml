@model IEnumerable<CS2Players.Application.ViewModels.JogadorViewModel>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Nickname</th>
                    <th>Nome Completo</th>
                    <th>Idade</th>
                    <th>Função</th>
                    <th>Time</th>
                    <th>Nacionalidade</th>
                    <th>Salário</th>
                    <th style="width: 200px;">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var jogador in Model)
                {
                    <tr>
                        <td>
                            <strong>@jogador.Nickname</strong>
                        </td>
                        <td>@jogador.NomeCompleto</td>
                        <td>
                            <span class="badge bg-secondary">@jogador.Idade anos</span>
                        </td>
                        <td>
                            <span class="badge bg-info">@jogador.Funcao</span>
                        </td>
                        <td>@jogador.TimeNome</td>
                        <td>@jogador.Nacionalidade</td>
                        <td>R$ @jogador.Salario.ToString("N2")</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@jogador.Id" class="btn btn-sm btn-info" title="Detalhes">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@jogador.Id" class="btn btn-sm btn-warning" title="Editar">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@jogador.Id" class="btn btn-sm btn-danger" title="Excluir">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info" role="alert">
        <i class="bi bi-info-circle"></i> Nenhum jogador encontrado.
    </div>
}