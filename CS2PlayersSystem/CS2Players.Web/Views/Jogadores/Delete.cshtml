@model CS2Players.Application.ViewModels.JogadorViewModel

@{
    ViewData["Title"] = "Excluir Jogador";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle"></i> Confirmar Exclusão
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <strong>Atenção!</strong> Tem certeza que deseja excluir este jogador?
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4">Nickname:</dt>
                        <dd class="col-sm-8"><strong>@Model.Nickname</strong></dd>

                        <dt class="col-sm-4">Nome Completo:</dt>
                        <dd class="col-sm-8">@Model.NomeCompleto</dd>

                        <dt class="col-sm-4">Idade:</dt>
                        <dd class="col-sm-8">@Model.Idade anos</dd>

                        <dt class="col-sm-4">Função:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-info">@Model.Funcao</span>
                        </dd>

                        <dt class="col-sm-4">Time:</dt>
                        <dd class="col-sm-8">@Model.TimeNome</dd>

                        <dt class="col-sm-4">Nacionalidade:</dt>
                        <dd class="col-sm-8">@Model.Nacionalidade</dd>

                        <dt class="col-sm-4">Salário:</dt>
                        <dd class="col-sm-8">R$ @Model.Salario.ToString("N2")</dd>

                        <dt class="col-sm-4">Data Contratação:</dt>
                        <dd class="col-sm-8">@Model.DataContratacao.ToString("dd/MM/yyyy")</dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Confirmar Exclusão
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>